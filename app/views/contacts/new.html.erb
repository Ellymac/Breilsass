<% title "Contact | " %>
<div class="col-md-5">
  <div class="form-area">
    <h3>Nous contacter</h3>
    <%= simple_form_for(@contact) do |f| %>
    <div class="form-group">
      <%= f.text_field :name, :required => true, placeholder: "Nom", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, :required => true, placeholder: "Email", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.text_field :subject, :as => :text, :required => true, placeholder: "Objet", class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.text_field :message, :as => :text, :required => true ,placeholder: "Message", class: 'form-control message', maxlength:140, rows:7   %>
    </div>
