<html lang="fr">
  <head>
    <title>S'identifier | BREILSASS</title>
    <script type="text/javascript" src="login.js"></script>
    <link href="login.css" rel="stylesheet">
  </head>

  <body>
    <%= render 'shared/error_messages' %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="panel panel-login">
            <div class="panel-heading">
              <div class="row">
                <div class="col-xs-6">
                  <%= link_to "Connexion", login_path, :id => "login-form-link" %>
                </div>
                <div class="col-xs-6">
                  <%= link_to "Inscription", signup_path, :class => "active", :id => "register-form-link" %>
                </div>
              </div>
              <hr>
            </div>

            <div class="panel-body">

              <div class="row">
                <div class="col-lg-12" id="login-form" style="display: none">
                  <%= form_for(@user) do |f| %>
                    <div class="form-group">
                      <%= f.email_field :email, placeholder: "Email" %>
                    </div>
                    <div class="form-group">
                      <%= f.password_field :password, placeholder: "Mot de passe" %>
                    </div>
                    <div class="form-group">
                      <%= f.submit "Se connecter", class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>

                <div class="col-md-6 col-md-offset-3" id="register-form">
                  <%= form_for(@user) do |f| %>
                    <div class="form-group">
                      <%= f.text_field :username, placeholder: "Nom d'utilisateur", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                      <%= f.email_field :email, placeholder: "Email", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password, placeholder: "Mot de passe", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password_confirmation, placeholder: "Confirmer mot de passe", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                      <%= f.submit "S'inscrire", class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

          </div>


          </div>
        </div>
      </div>
    </div>
  </body>
</html>
