<html lang="fr">
<% title "Guide de survie | " %>

<body>
  <div class="container">
    <% @articles.each do |art| %>
    <div class="row">
      <div class="box">
        <div class="col-lg-12">
          <div class="hrSurvival"></div>
          <h2 class="intro-text text-center">
            <strong><%= art[:title] %></strong>
          </h2>
          <div class="hrSurvival"></div>
          <% if art[:image] %>
            <img class="img-responsive2 img-border img-left" src="<%= art[:image] %>" alt="">
          <% end %>
          <%= raw art[:content] %>
          <p> <%= link_to "Commenter", '/comment?' + {id: 2}.to_param, method: :post
            %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</body>
</html>
